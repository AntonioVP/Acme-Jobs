<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="conversion-service.xml" />

	<!-- Shouts -->

	<bean id="shout01" class="acme.entities.shouts.Shout">
		<property name="author" value="John Don" />
		<property name="text" value="I'm happy!" />
		<property name="moment" value="2019/09/09 10:00" />
	</bean>
	
	<bean id="shout02" class="acme.entities.shouts.Shout">
		<property name="author" value="Jane Doe"/>
		<property name="text" value="I'm the master of my room!" />
		<property name="moment" value="2019/08/09 15:55" />
	</bean>
	
	<bean id="shout03" class="acme.entities.shouts.Shout">
		<property name="author" value="Foo Bar" />
		<property name="text" value="Just turning 20'" />
		<property name="moment" value="2019/09/07 00:00" />
	</bean>
	
	<!-- Vidal Bulletin -->
	
	<bean id="vidalBulletin01" class="acme.entities.vidalBulletins.VidalBulletin">
		<property name="type" value="ACADEMIC" />
		<property name="title" value="Increible alumno encuentra Leslie!" />
		<property name="author" value="John Don" />
		<property name="text" value="I'm happy!" />
	</bean>
	
	<bean id="vidalBulletin02" class="acme.entities.vidalBulletins.VidalBulletin">
		<property name="type" value="SCIENTIFIC" />
		<property name="title" value="Leslie descubre la formula para aprobar" />
		<property name="author" value="Jane Doe"/>
		<property name="text" value="Al parecer NO estaba en lo cierto y conduce al fracaso." />
	</bean>
	
	<bean id="vidalBulletin03" class="acme.entities.vidalBulletins.VidalBulletin">
		<property name="type" value="OTHER" />
		<property name="title" value="Leslie al descubierto" />
		<property name="author" value="Foo Bar" />
		<property name="text" value="La realidad es que Leslie lo que quiere es vaguear." />
	</bean>
</beans>

		<!-- Romero Bulletins-->

	<bean id="romeroBulletin01" class="acme.entities.romeroBulletins.RomeroBulletin">
		<property name="name" value="Antonio Romero" />
		<property name="text" value="I am a developer" />
		<property name="bibliography" value="Student of the University of Seville" />
		<property name="moment" value="2019/08/07 01:00"/>
	</bean>
	
	<bean id="romeroBulletin02" class="acme.entities.romeroBulletins.RomeroBulletin">
		<property name="name" value="Rodrigo Vidal"/>
		<property name="text" value=" I'm working" />
		<property name="bibliography" value="Student of the University of Seville" />
		<property name="moment" value="2019/07/07 01:00"/>
	</bean>
	
	<bean id="romeroBulletin03" class="acme.entities.romeroBulletins.RomeroBulletin">
		<property name="name" value="Rodrigo Vidal"/>
		<property name="text" value="I am jobless" />
		<property name="bibliography" value="I'm not very smart" />
		<property name="moment" value="2019/06/07 01:00"/>
	</bean>
</beans>